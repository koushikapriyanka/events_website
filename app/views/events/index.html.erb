<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ticket fee</th>
      <th>Timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%=link_to event.name, event_user_events_path(:event_id => event.id) %></td>
        <td><%= event.ticket_fee %></td>
        <td><%= event.timing.in_time_zone('Kolkata').strftime("%d %b %Y %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>